{/* Avoids FOUC */}
<script is:inline>
  let theme = localStorage.getItem("theme");
  if (!theme) {
    const isDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
    theme = isDark ? "dark" : "light";
  }
  if (theme === "dark") document.documentElement.classList.add("dark");
</script>
